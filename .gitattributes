# Auto detect text files and perform LF normalization
* text=auto

# Explicitly set line endings for specific files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.sh text eol=lf

# Package manager files
package.json text eol=lf
package-lock.json text eol=lf linguist-generated=true
yarn.lock text eol=lf linguist-generated=true
pnpm-lock.yaml text eol=lf linguist-generated=true

# Config files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc* text eol=lf
tsconfig.json text eol=lf
next.config.mjs text eol=lf
postcss.config.js text eol=lf
tailwind.config.js text eol=lf

# Prisma files
*.prisma text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf
README.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.mp3 binary
*.mp4 binary
*.pdf binary
*.zip binary
*.gz binary
