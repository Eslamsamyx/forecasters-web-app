# NPM Configuration for Cross-Platform Compatibility

# Legacy peer dependencies for Next.js 16
legacy-peer-deps=true

# Ensure consistent package resolution
package-lock=true

# Improve installation performance
prefer-offline=false
audit=false

# Handle optional dependencies (like fsevents on macOS)
optional=true

# Engine strict checking (disable to allow platform differences)
engine-strict=false

# Timeout settings for slower connections
fetch-timeout=600000
fetch-retries=3

# Save exact versions to prevent version drift
save-exact=false
save-prefix=^
